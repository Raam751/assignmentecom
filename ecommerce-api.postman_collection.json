{
  "info": {
    "name": "E-Commerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8080"},
    {"key": "userId", "value": "user123"},
    {"key": "productId", "value": ""},
    {"key": "orderId", "value": ""}
  ],
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product - Laptop",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"name\": \"Laptop\",\n  \"description\": \"Gaming Laptop\",\n  \"price\": 50000.0,\n  \"stock\": 10\n}"},
            "url": {"raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"]}
          }
        },
        {
          "name": "Create Product - Mouse",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"name\": \"Mouse\",\n  \"description\": \"Wireless Mouse\",\n  \"price\": 1000.0,\n  \"stock\": 50\n}"},
            "url": {"raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"]}
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"]}
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Add to Cart",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}"},
            "url": {"raw": "{{baseUrl}}/api/cart/add", "host": ["{{baseUrl}}"], "path": ["api", "cart", "add"]}
          }
        },
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/cart/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api", "cart", "{{userId}}"]}
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "url": {"raw": "{{baseUrl}}/api/cart/{{userId}}/clear", "host": ["{{baseUrl}}"], "path": ["api", "cart", "{{userId}}", "clear"]}
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"userId\": \"{{userId}}\"\n}"},
            "url": {"raw": "{{baseUrl}}/api/orders", "host": ["{{baseUrl}}"], "path": ["api", "orders"]}
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/orders/{{orderId}}", "host": ["{{baseUrl}}"], "path": ["api", "orders", "{{orderId}}"]}
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/orders/user/{{userId}}", "host": ["{{baseUrl}}"], "path": ["api", "orders", "user", "{{userId}}"]}
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"orderId\": \"{{orderId}}\",\n  \"amount\": 100000.0\n}"},
            "url": {"raw": "{{baseUrl}}/api/payments/create", "host": ["{{baseUrl}}"], "path": ["api", "payments", "create"]}
          }
        },
        {
          "name": "Get Payment by Order",
          "request": {
            "method": "GET",
            "url": {"raw": "{{baseUrl}}/api/payments/order/{{orderId}}", "host": ["{{baseUrl}}"], "path": ["api", "payments", "order", "{{orderId}}"]}
          }
        }
      ]
    },
    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Simulate Payment Webhook",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"orderId\": \"{{orderId}}\",\n  \"status\": \"SUCCESS\",\n  \"paymentId\": \"pay_manual123\"\n}"},
            "url": {"raw": "{{baseUrl}}/api/webhooks/payment", "host": ["{{baseUrl}}"], "path": ["api", "webhooks", "payment"]}
          }
        }
      ]
    }
  ]
}
